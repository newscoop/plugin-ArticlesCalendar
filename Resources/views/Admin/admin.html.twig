    </table>
</form>
<table border="0" cellspacing="0" cellpadding="0" class="box_table">
    <tbody>
        <tr>
            <td>
                <div class="actions"><string>Add custom CSS to customize Calendar widget:</string><span class="last">Last modified: <span id="time">{{ lastModified|date("Y-m-d H:i:s")}}</span></span></div>
            </td>
        </tr>
        <tr>
            <td>
                <textarea id="textarea" name="textarea">{{ styles }}</textarea>
                <script>
                    var editor = CodeMirror.fromTextArea(document.getElementById("textarea"), {
                        lineNumbers: true,
                        matchBrackets: true,
                        mode: "text/css"
                    });
                </script>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right" style="padding-top: 10px;">
                <input type="submit" id="save" value="Save" class="save-button">
            </td>
